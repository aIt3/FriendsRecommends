<section id="index">
    <div id="header">
        <div>
            <h1>
                {{appTitle}}
            </h1>
            </div>
    {{#if userInSession}}        
    <a id="profile" href="users/user-profile">{{ userInSession.username }}</a>
          <form id="logout-form" action="/logout" method="POST">
        <button id="logout">Logout</button>
        </form>
        {{else}}
        <a id ="login" href="/login">Login</a>
        <a id="signup" href="/signup">Register</a>
    {{/if}}
    </div>
    <div id="description">
        <p>FriendsRecommends is a quiet place far away from the noisy internet highways. Get a tea, share your favorite links and lose yourself into a sea of awesomeness.</p>
    </div>
    <div id="addPost">
        <form action="/post/create" method="POST">
            <input type="text" name ="link" id="linkField" placeholder="Add your link here">
        <div id="addPostSecondLine">
            <input type="text" name ="title" id="titleField" placeholder="Add the title for the post here">
            <input type="text" name ="topic" id="topicField" placeholder="What topics are addressed?">
        </div>
         <div id="addPostThirdLine">
            <select name="mediaType">
                <option value="Movie">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M18,9H16V7H18M18,13H16V11H18M18,17H16V15H18M8,9H6V7H8M8,13H6V11H8M8,17H6V15H8M18,3V5H16V3H8V5H6V3H4V21H6V19H8V21H16V19H18V21H20V3H18Z" /></svg>
                    Movie
                    </option>
                <option value="Podcast">Podcast</option>
                <option value="Music">Music</option>
                <option value="Article">Article</option>
                <option value="Book">Book</option>
            </select>
            <button type="submit">Post</button>
        </div>
        </form>
    </div>

