    <div id="addPost">
        <form action="/post/create" method="POST">
            <input type="text" name ="link" id="linkField" placeholder="Add your link here">
        <div id="addPostSecondLine">
            <input type="text" name ="title" id="titleField" placeholder="Add the title for the post here">
            <input type="text" name ="topic" id="topicField" placeholder="What topics are addressed?">
        </div>
         <div id="addPostThirdLine">
            <select name="mediaType">
                <option value="Movie">Movie</option>
                <option value="Podcast">Podcast</option>
                <option value="Music">Music</option>
                <option value="Article">Article</option>
                <option value="Book">Book</option>
            </select>
            <input type="submit">
        </div>
        </form>
    </div>

    <div id="tableForPosts">
        <table>
            <colgroup span="4"></colgroup>
                <tr id="tableHeadings">
                    <th>Title</th>
                    <th>added by User</th>
                    <th>Dated added</th>
                    <th>Media</th>
                    <th>Topic</th>
                    <th>Reactions</th>
                    <th>Options</th>
                </tr>
                 {{#each posts}}
                <tr id="postEntries">
                    <th class="title"><a href="{{link}}">{{title}}</a></th>
                    <th class="user">{{postedByUser.username}}</th>
                    <th class="dateAdded">{{dateAdded}}</th>
                    <th class="mediaType">{{mediaType}}</th>
                    <th class="topic">{{topic}}</th>
                    <th class="reactions">
                        <button id="thumbsUp" data-postId="{{_id}}">üëç</button> 
                        <button id="thumbsDown">üëé</button>
                    </th>
                    <th class="options">
                        <a href="/post/edit/{{_id}}">edit</a>
                        <a href="/post/delete/{{_id}}">Delete</a>
                    </th>
                </tr>
                {{/each}}

    </table>

    </div>
