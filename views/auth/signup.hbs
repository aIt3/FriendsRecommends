{{!-- views/auth/signup.hbs --}}

<div id="signup_form">
  <h1 id="logo">{{appTitle}}</h1>

  <h2>Signup</h2>

  <form action="/signup" method="POST">
    <label> Username
      <input type="text" name="username" placeholder="ironhacker" />
    </label>
    <label> Email
      <input type="email" name="email" placeholder="rockstar@ironhack.com" />
    </label>
    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
    <button id="signup_button" type="submit">Create account</button>
    {{!-- error message will be added here --}}
  </form>
</div>